{% extends 'layout-admin.njk' %}

{% block header %}
  <a href="/admin/receitas"><span class="selected">RECEITAS</span></a>
  <a href="/admin/chefs"><span>CHEFS</span></a>
  <a href="/admin/usuarios"><span>USU√ÅRIOS</span></a>
{% endblock header %}

{% block content %}
  <div class="recipe-edit">
    <form method="POST" action="/admin/receitas/{{recipe.id}}?_method=PUT" enctype="multipart/form-data">
      <input type="hidden" name="id" value="{{recipe.id}}">
      <div class="header-edit">
        <div>
          <span>Editando receita</span>
        </div>
        <div class="edit-actions">
          <label for="delete" class="delete">Deletar</label>
          <button type="submit" class="save">Salvar</button>
        </div>
      </div>
      {% include "admin/recipes/fields.njk" %}
    </form>
    <form method="POST" action="/admin/receitas/{{recipe.id}}?_method=DELETE" id="form-delete">
      <button type="submit" class="delete" name="delete" id="delete">Deletar</button>
    </form>
  </div>
{% endblock content %}